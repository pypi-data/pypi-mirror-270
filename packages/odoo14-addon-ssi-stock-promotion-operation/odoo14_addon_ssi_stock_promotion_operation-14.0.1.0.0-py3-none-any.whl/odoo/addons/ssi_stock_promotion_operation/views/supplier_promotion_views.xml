<odoo>
<record id="supplier_promotion_action" model="ir.actions.act_window">
    <field name="name">Supplier Promotion </field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">stock.picking</field>
    <field name="view_mode">tree,form</field>
    <field
            name="domain"
            eval="[('picking_type_category_id','=',ref('picking_category_supplier_promotion'))]"
        />
    <field
            name="context"
            eval="{'default_picking_type_category_id':ref('picking_category_supplier_promotion')}"
        />
</record>

<menuitem
        id="supplier_promotion_menu"
        name="Supplier Promotion "
        parent="ssi_stock.menu_outgoing_movement"
        groups="supplier_promotion_viewer_group"
        action="supplier_promotion_action"
        sequence="119"
    />
</odoo>
