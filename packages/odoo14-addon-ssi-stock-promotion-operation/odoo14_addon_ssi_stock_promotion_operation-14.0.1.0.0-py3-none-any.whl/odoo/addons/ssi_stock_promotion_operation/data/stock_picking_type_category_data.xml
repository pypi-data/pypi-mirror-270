<odoo>
<data>
<record id="picking_category_supplier_promotion" model="picking_type_category">
    <field name="name">Supplier Promotion</field>
    <field name="code">SPR</field>
    <field name="direction">outgoing</field>
    <field
                name="default_source_location_type_id"
                ref="ssi_stock.location_type_main_stock"
            />
    <field
                name="allowed_source_location_type_ids"
                eval="[(6, 0, [ref('ssi_stock.location_type_main_stock')])]"
            />
    <field
                name="default_destination_location_type_id"
                ref="ssi_stock.location_type_supplier"
            />

    <field
                name="allowed_destination_location_type_ids"
                eval="[(6, 0, [ref('ssi_stock.location_type_supplier')])]"
            />
</record>

<record id="picking_category_customer_promotion" model="picking_type_category">
    <field name="name">Customer Promotion</field>
    <field name="code">CPR</field>
    <field name="direction">incoming</field>
    <field
                name="default_source_location_type_id"
                ref="ssi_stock.location_type_customer"
            />
    <field
                name="allowed_source_location_type_ids"
                eval="[(6, 0, [ref('ssi_stock.location_type_customer')])]"
            />
    <field
                name="default_destination_location_type_id"
                ref="ssi_stock.location_type_main_stock"
            />

    <field
                name="allowed_destination_location_type_ids"
                eval="[(6, 0, [ref('ssi_stock.location_type_main_stock')])]"
            />
</record>
</data>
</odoo>
