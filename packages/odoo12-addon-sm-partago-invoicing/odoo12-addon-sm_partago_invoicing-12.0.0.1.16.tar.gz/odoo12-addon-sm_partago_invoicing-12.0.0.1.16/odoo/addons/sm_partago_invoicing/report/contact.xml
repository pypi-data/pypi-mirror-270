<odoo>
  <data>
    <template id="sm_contact" inherit_id="base.contact">
      <xpath expr="//address" position="replace">
        <div t-if="'name' in fields">
          <t t-if="object.name">
            <span itemprop="name" t-esc="name"/>
            <br/>
          </t>
          <t t-if="object.is_company"> <!-- THIS IF SHOULD BE DOCUMENT TYPE?-->
            <t t-if="object.vat" >
              <span itemprop="cif" t-esc="object.vat"/>
              <br/>
            </t>
          </t>
          <t t-if="not object.is_company">
            <t t-if="object.vat" >
              <span itemprop="dni" t-esc="object.vat"/>
              <br/>
            </t>
          </t>
          <t t-if="object.street">
            <span itemprop="street" t-esc="object.street"/>
            <br/>
          </t>
          <t t-if="object.zip">
            <span itemprop="zip" t-esc="object.zip"/>&#xA0;
          </t>
          <t t-if="object.city">
            <span itemprop="city" t-esc="object.city"/>&#xA0;
          </t>
          <br/>
          <t t-if="object.email">
            <span itemprop="email" t-esc="object.email"/><br/>
          </t>
          <span t-if="object.member">NÃºmero de soci/a:
            <span t-field="object.cooperator_register_number"/>
          </span>
        </div>
      </xpath>
    </template>
  </data>
</odoo>
