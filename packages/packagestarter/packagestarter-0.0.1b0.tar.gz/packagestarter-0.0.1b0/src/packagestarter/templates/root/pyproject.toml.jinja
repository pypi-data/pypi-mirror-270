[tool.poetry]
name = '{{ package_name }}'
version = '0.1.0'
description = 'A detailed description of {{ package_name }}.'
authors = ['Your Name <you@example.com>']
license = 'MIT'

[tool.poetry.dependencies]
python = '^3.10'
# Add your runtime dependencies here, e.g., requests = '^2.25.1'

[tool.poetry.dev-dependencies]
pytest = '^6.2'

[build-system]
requires = ['poetry-core>=1.0.0']
build-backend = 'poetry.core.masonry.api'

[[tool.poetry.packages]]
include = '{{ package_name }}'
from = 'src'
